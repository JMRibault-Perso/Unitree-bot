<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>G1 Robot Controller</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #0f1419;
            color: #e0e0e0;
            overflow: hidden;
            height: 100vh;
        }

        .app-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            height: 100vh;
            gap: 0;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            background: linear-gradient(180deg, #1a1f2e 0%, #16192a 100%);
            border-right: 1px solid #2d3748;
            display: flex;
            flex-direction: column;
            overflow-y: auto;
            box-shadow: 2px 0 10px rgba(0,0,0,0.5);
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #2d3748;
            text-align: center;
        }

        .sidebar-header h2 {
            font-size: 1.2em;
            color: #667eea;
            margin-bottom: 8px;
        }

        .robot-status-mini {
            font-size: 12px;
            color: #a0aec0;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: #f56565;
        }

        .status-dot.online {
            background: #48bb78;
            box-shadow: 0 0 6px #48bb78;
        }

        .sidebar-nav {
            flex: 1;
            padding: 10px;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .nav-section {
            margin-bottom: 20px;
        }

        .nav-section-title {
            font-size: 11px;
            font-weight: bold;
            color: #718096;
            text-transform: uppercase;
            padding: 8px 12px;
            letter-spacing: 0.5px;
        }

        .nav-btn {
            padding: 12px 16px;
            background: #2d3748;
            border: 1px solid #4a5568;
            border-radius: 6px;
            color: #cbd5e0;
            cursor: pointer;
            text-align: left;
            font-size: 14px;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .nav-btn:hover {
            background: #4a5568;
            border-color: #667eea;
            color: #e0e0e0;
        }

        .nav-btn.active {
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            border-color: #667eea;
            color: white;
            box-shadow: 0 0 10px rgba(102, 126, 234, 0.3);
        }

        .nav-btn-icon {
            font-size: 16px;
            min-width: 20px;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            display: grid;
            grid-template-rows: 80px 1fr;
            background: #0f1419;
            overflow: hidden;
        }

        .top-bar {
            background: linear-gradient(90deg, #1a1f2e 0%, #16192a 100%);
            border-bottom: 1px solid #2d3748;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.3);
        }

        .top-bar-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .robot-title {
            font-size: 1.5em;
            color: #667eea;
            font-weight: bold;
        }

        .quick-status {
            display: flex;
            gap: 30px;
            font-size: 14px;
        }

        .status-item {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .status-label {
            color: #a0aec0;
            font-size: 11px;
            text-transform: uppercase;
        }

        .status-value {
            color: #e0e0e0;
            font-weight: bold;
        }

        .battery-bar {
            display: inline-block;
            width: 50px;
            height: 20px;
            border: 1px solid #48bb78;
            border-radius: 3px;
            overflow: hidden;
            margin-right: 8px;
            vertical-align: middle;
        }

        .battery-fill {
            height: 100%;
            background: linear-gradient(90deg, #48bb78 0%, #38a169 100%);
            width: 80%;
            transition: width 0.3s;
        }

        .battery-fill.critical {
            background: linear-gradient(90deg, #f56565 0%, #e53e3e 100%);
        }

        .battery-fill.warning {
            background: linear-gradient(90deg, #ed8936 0%, #dd6b20 100%);
        }

        .connection-btn {
            padding: 10px 20px;
            background: #48bb78;
            border: none;
            border-radius: 6px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
        }

        .connection-btn:hover {
            background: #38a169;
            box-shadow: 0 0 10px rgba(72, 187, 120, 0.3);
        }

        .connection-btn.connecting {
            background: #ed8936;
        }

        .connection-btn.disconnect {
            background: #f56565;
        }

        .connection-btn.disconnect:hover {
            background: #e53e3e;
        }

        /* ===== CONTENT AREA ===== */
        .content {
            overflow-y: auto;
            padding: 30px;
            display: grid;
            grid-template-columns: 1fr 450px;
            gap: 30px;
        }

        .content-panel {
            background: #1a1f2e;
            border: 1px solid #2d3748;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }

        .panel-title {
            font-size: 1.3em;
            color: #667eea;
            margin-bottom: 20px;
            border-bottom: 2px solid #2d3748;
            padding-bottom: 12px;
        }

        .panel-hidden {
            display: none !important;
        }

        /* ===== MOVEMENT CONTROLS (Always visible on right) ===== */
        .movement-panel {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .fsm-states {
            background: #16192a;
            border: 1px solid #2d3748;
            border-radius: 8px;
            padding: 15px;
        }

        .fsm-states-title {
            font-size: 12px;
            font-weight: bold;
            color: #a0aec0;
            text-transform: uppercase;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
        }

        .state-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }

        .state-btn {
            padding: 10px;
            background: #2d3748;
            border: 1px solid #4a5568;
            border-radius: 6px;
            color: #cbd5e0;
            cursor: pointer;
            font-size: 12px;
            font-weight: bold;
            transition: all 0.2s;
            text-align: center;
        }

        .state-btn:hover:not(:disabled) {
            background: #4a5568;
            border-color: #667eea;
        }

        .state-btn.active {
            background: #667eea;
            border-color: #667eea;
            color: white;
            box-shadow: 0 0 12px rgba(102, 126, 234, 0.4);
        }

        .state-btn:disabled {
            opacity: 0.4;
            cursor: not-allowed;
        }

        /* ===== WASD/QE CONTROLS ===== */
        .keyboard-controls {
            background: #16192a;
            border: 1px solid #2d3748;
            border-radius: 8px;
            padding: 15px;
        }

        .controls-title {
            font-size: 12px;
            font-weight: bold;
            color: #a0aec0;
            text-transform: uppercase;
            margin-bottom: 12px;
            letter-spacing: 0.5px;
        }

        .control-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 8px;
            margin-bottom: 12px;
        }

        .control-btn {
            aspect-ratio: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #2d3748;
            border: 2px solid #4a5568;
            border-radius: 6px;
            color: #e0e0e0;
            font-weight: bold;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.2s;
            user-select: none;
        }

        .control-btn:hover {
            background: #4a5568;
            border-color: #667eea;
        }

        .control-btn.active {
            background: #667eea;
            border-color: #667eea;
            box-shadow: 0 0 12px rgba(102, 126, 234, 0.6);
        }

        .rotation-controls {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
        }

        .rotation-btn {
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #2d3748;
            border: 2px solid #4a5568;
            border-radius: 6px;
            color: #e0e0e0;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
            user-select: none;
        }

        .rotation-btn:hover {
            background: #4a5568;
            border-color: #667eea;
        }

        .rotation-btn.active {
            background: #667eea;
            border-color: #667eea;
            box-shadow: 0 0 12px rgba(102, 126, 234, 0.6);
        }

        .stop-btn {
            width: 100%;
            padding: 12px;
            background: linear-gradient(90deg, #f56565 0%, #c53030 100%);
            border: 1px solid #c53030;
            border-radius: 6px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
            margin-top: 8px;
        }

        .stop-btn:hover {
            box-shadow: 0 0 12px rgba(245, 101, 101, 0.4);
        }

        /* ===== MODAL ===== */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.7);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }

        .modal.active {
            display: flex;
        }

        .modal-content {
            background: #1a1f2e;
            border: 1px solid #2d3748;
            border-radius: 10px;
            padding: 30px;
            max-width: 500px;
            max-height: 80vh;
            overflow-y: auto;
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
        }

        .modal-title {
            font-size: 1.5em;
            color: #667eea;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #cbd5e0;
            font-weight: bold;
            font-size: 14px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            background: #2d3748;
            border: 1px solid #4a5568;
            border-radius: 6px;
            color: #e0e0e0;
            font-size: 14px;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 8px rgba(102, 126, 234, 0.3);
        }

        .modal-buttons {
            display: flex;
            gap: 10px;
            margin-top: 25px;
        }

        .btn-primary {
            flex: 1;
            padding: 12px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 6px;
            color: white;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary:hover {
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            flex: 1;
            padding: 12px;
            background: #2d3748;
            border: 1px solid #4a5568;
            border-radius: 6px;
            color: #cbd5e0;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-secondary:hover {
            background: #4a5568;
            border-color: #667eea;
        }

        /* ===== MESSAGES ===== */
        .message {
            padding: 15px;
            border-radius: 6px;
            margin-bottom: 15px;
            font-size: 14px;
            border-left: 4px solid;
        }

        .message.success {
            background: rgba(72, 187, 120, 0.1);
            color: #48bb78;
            border-color: #48bb78;
        }

        .message.error {
            background: rgba(245, 101, 101, 0.1);
            color: #f56565;
            border-color: #f56565;
        }

        .message.info {
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            border-color: #667eea;
        }

        /* ===== SCROLLBAR ===== */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #16192a;
        }

        ::-webkit-scrollbar-thumb {
            background: #4a5568;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #667eea;
        }

        /* ===== RESPONSIVE ===== */
        @media (max-width: 1024px) {
            .content {
                grid-template-columns: 1fr;
            }

            .app-layout {
                grid-template-columns: 1fr;
            }

            .sidebar {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="app-layout">
        <!-- SIDEBAR -->
        <div class="sidebar">
            <div class="sidebar-header">
                <h2>G1 Controller</h2>
                <div class="robot-status-mini">
                    <span class="status-dot"></span>
                    <span id="sidebarStatus">Disconnected</span>
                </div>
            </div>

            <nav class="sidebar-nav">
                <!-- Connection Section -->
                <div class="nav-section">
                    <div class="nav-section-title">Connection</div>
                    <button class="nav-btn" id="nav-connect" onclick="showModal('connectModal')">
                        <span class="nav-btn-icon">üîå</span>
                        <span>Connect Robot</span>
                    </button>
                </div>

                <!-- Movement Section -->
                <div class="nav-section">
                    <div class="nav-section-title">Movement</div>
                    <button class="nav-btn active" onclick="switchView('movement')">
                        <span class="nav-btn-icon">üö∂</span>
                        <span>Movement Control</span>
                    </button>
                </div>

                <!-- SLAM Section -->
                <div class="nav-section">
                    <div class="nav-section-title">SLAM & Navigation</div>
                    <button class="nav-btn" onclick="switchView('slam-teach')">
                        <span class="nav-btn-icon">üó∫Ô∏è</span>
                        <span>Teach Map</span>
                    </button>
                    <button class="nav-btn" onclick="switchView('slam-navigate')">
                        <span class="nav-btn-icon">üß≠</span>
                        <span>Navigate</span>
                    </button>
                </div>

                <!-- Actions Section -->
                <div class="nav-section">
                    <div class="nav-section-title">Actions</div>
                    <button class="nav-btn" onclick="switchView('teach-action')">
                        <span class="nav-btn-icon">üéì</span>
                        <span>Teach Action</span>
                    </button>
                    <button class="nav-btn" onclick="switchView('gestures')">
                        <span class="nav-btn-icon">üëã</span>
                        <span>Gestures</span>
                    </button>
                </div>

                <!-- Settings Section -->
                <div class="nav-section">
                    <div class="nav-section-title">Settings</div>
                    <button class="nav-btn" onclick="switchView('status')">
                        <span class="nav-btn-icon">üìä</span>
                        <span>Robot Status</span>
                    </button>
                </div>
            </nav>
        </div>

        <!-- MAIN CONTENT -->
        <div class="main-content">
            <!-- TOP BAR -->
            <div class="top-bar">
                <div class="top-bar-left">
                    <div class="robot-title" id="topRobotName">G1 Robot</div>
                    <div class="quick-status">
                        <div class="status-item">
                            <div class="status-label">FSM State</div>
                            <div class="status-value" id="topFsmState">-</div>
                        </div>
                        <div class="status-item">
                            <div class="status-label">Battery</div>
                            <div class="status-value">
                                <div class="battery-bar">
                                    <div id="topBatteryFill" class="battery-fill" style="width: 80%;"></div>
                                </div>
                                <span id="topBatteryText">80%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="connection-btn" id="topConnectBtn" onclick="toggleConnection()">
                    Connect
                </button>
            </div>

            <!-- CONTENT AREA -->
            <div class="content">
                <!-- LEFT PANEL: Views -->
                <div>
                    <!-- Movement View -->
                    <div id="view-movement" class="content-panel">
                        <h3 class="panel-title">üö∂ Movement Control</h3>
                        <p style="color: #a0aec0; margin-bottom: 20px;">Use WASD to move, QE to rotate, Space to stop</p>
                        <div id="movement-controls"></div>
                    </div>

                    <!-- SLAM Teach View -->
                    <div id="view-slam-teach" class="content-panel panel-hidden">
                        <h3 class="panel-title">üó∫Ô∏è Teach Map (SLAM)</h3>
                        <p style="color: #a0aec0; margin-bottom: 20px;">Record a new map of your environment</p>
                        <div class="form-group">
                            <label>Map Name</label>
                            <input type="text" id="mapName" placeholder="e.g., living_room">
                        </div>
                        <div class="form-group">
                            <label>SLAM Type</label>
                            <select id="slamType">
                                <option value="indoor">Indoor</option>
                                <option value="outdoor">Outdoor</option>
                            </select>
                        </div>
                        <button class="btn-primary" style="width: 100%; margin-top: 15px;" onclick="startMapping()">
                            Start Mapping
                        </button>
                        <button class="btn-secondary" style="width: 100%; margin-top: 10px;" onclick="stopMapping()">
                            Stop & Save Map
                        </button>
                    </div>

                    <!-- SLAM Navigate View -->
                    <div id="view-slam-navigate" class="content-panel panel-hidden">
                        <h3 class="panel-title">üß≠ Navigate</h3>
                        <p style="color: #a0aec0; margin-bottom: 20px;">Navigate to waypoints in saved maps</p>
                        <div class="form-group">
                            <label>Select Map</label>
                            <select id="mapSelect">
                                <option value="">-- Loading maps --</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Waypoint or Coordinates</label>
                            <input type="text" id="waypoint" placeholder="e.g., kitchen or 2.5 1.3">
                        </div>
                        <button class="btn-primary" style="width: 100%; margin-top: 15px;" onclick="navigateTo()">
                            Navigate
                        </button>
                    </div>

                    <!-- Teach Action View -->
                    <div id="view-teach-action" class="content-panel panel-hidden">
                        <h3 class="panel-title">üéì Teach Action</h3>
                        <p style="color: #a0aec0; margin-bottom: 20px;">Record custom robot actions</p>
                        <div class="form-group">
                            <label>Action Name</label>
                            <input type="text" id="actionName" placeholder="e.g., wave_hello">
                        </div>
                        <button class="btn-primary" style="width: 100%; margin-top: 15px;" onclick="startTeaching()">
                            üî¥ Start Recording
                        </button>
                        <button class="btn-secondary" style="width: 100%; margin-top: 10px;" onclick="stopTeaching()">
                            ‚èπÔ∏è Stop Recording
                        </button>
                    </div>

                    <!-- Gestures View -->
                    <div id="view-gestures" class="content-panel panel-hidden">
                        <h3 class="panel-title">üëã Gestures & Animations</h3>
                        <p style="color: #a0aec0; margin-bottom: 20px;">Pre-programmed hand gestures</p>
                        <div id="gesturesGrid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;"></div>
                    </div>

                    <!-- Status View -->
                    <div id="view-status" class="content-panel panel-hidden">
                        <h3 class="panel-title">üìä Robot Status</h3>
                        <div id="statusDetail"></div>
                    </div>
                </div>

                <!-- RIGHT PANEL: Always-visible Controls -->
                <div class="movement-panel">
                    <!-- FSM States -->
                    <div class="fsm-states">
                        <div class="fsm-states-title">FSM States</div>
                        <div class="state-grid">
                            <button class="state-btn" onclick="setFsmState('ZERO_TORQUE', 0)">Zero Torque</button>
                            <button class="state-btn" onclick="setFsmState('DAMP', 1)">Damp</button>
                            <button class="state-btn" onclick="setFsmState('START', 200)">Start</button>
                            <button class="state-btn" onclick="setFsmState('SIT', 3)">Sit</button>
                            <button class="state-btn" onclick="setFsmState('SQUAT_TO_STAND', 706)">Squat‚ÜíStand</button>
                            <button class="state-btn" onclick="setFsmState('STAND_TO_SQUAT', 707)">Stand‚ÜíSquat</button>
                        </div>
                    </div>

                    <!-- WASD/QE Controls -->
                    <div class="keyboard-controls">
                        <div class="controls-title">Movement (WASD/QE)</div>
                        <div class="control-grid">
                            <div></div>
                            <button class="control-btn" id="btn-w" data-key="w" title="W - Forward">W</button>
                            <div></div>
                            <button class="control-btn" id="btn-a" data-key="a" title="A - Left">A</button>
                            <button class="control-btn stop-btn" style="padding: 0; border: none;" id="btn-space" title="Space - Stop">STOP</button>
                            <button class="control-btn" id="btn-d" data-key="d" title="D - Right">D</button>
                            <div></div>
                            <button class="control-btn" id="btn-s" data-key="s" title="S - Backward">S</button>
                            <div></div>
                        </div>
                        <div class="rotation-controls">
                            <button class="rotation-btn" id="btn-q" data-key="q" title="Q - Rotate Left">‚ü≤ Q</button>
                            <button class="rotation-btn" id="btn-e" data-key="e" title="E - Rotate Right">E ‚ü≥</button>
                        </div>
                        <button class="stop-btn" id="btn-stop" onclick="stopMovement()">üõë STOP</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODALS -->
    <div id="connectModal" class="modal">
        <div class="modal-content">
            <h3 class="modal-title">Connect to Robot</h3>
            <div class="form-group">
                <label>Robot IP Address</label>
                <input type="text" id="robotIp" placeholder="192.168.86.2" value="192.168.86.2">
            </div>
            <div class="form-group">
                <label>Serial Number</label>
                <input type="text" id="robotSerial" placeholder="E21D1000PAHBMB06">
            </div>
            <div id="connectMessage" class="message" style="display: none;"></div>
            <div class="modal-buttons">
                <button class="btn-primary" onclick="connectRobot()">Connect</button>
                <button class="btn-secondary" onclick="closeModal('connectModal')">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        const API_URL = 'http://localhost:3000/api';
        let connectedRobot = null;
        let wsConnection = null;
        let keysPressed = {};

        // ===== MODAL FUNCTIONS =====
        function showModal(id) {
            document.getElementById(id).classList.add('active');
        }

        function closeModal(id) {
            document.getElementById(id).classList.remove('active');
        }

        // ===== VIEW SWITCHING =====
        function switchView(view) {
            // Hide all views
            document.querySelectorAll('[id^="view-"]').forEach(el => {
                el.classList.add('panel-hidden');
            });

            // Show selected view
            const viewEl = document.getElementById(`view-${view}`);
            if (viewEl) {
                viewEl.classList.remove('panel-hidden');
            }

            // Update nav buttons
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.closest('.nav-btn').classList.add('active');
        }

        // ===== CONNECTION =====
        async function connectRobot() {
            const ip = document.getElementById('robotIp').value;
            const serial = document.getElementById('robotSerial').value;

            if (!ip) {
                showMessage('connectMessage', 'Please enter robot IP', 'error');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/connect?mac=fc:23:cd:92:60:02&ip=${ip}&serial_number=${serial}`, {
                    method: 'POST'
                });
                const data = await response.json();

                if (data.success) {
                    connectedRobot = { ip, serial };
                    updateConnectionUI(true);
                    closeModal('connectModal');
                    connectWebSocket();
                } else {
                    showMessage('connectMessage', data.error || 'Connection failed', 'error');
                }
            } catch (err) {
                showMessage('connectMessage', 'Connection error: ' + err.message, 'error');
            }
        }

        function toggleConnection() {
            if (connectedRobot) {
                disconnectRobot();
            } else {
                showModal('connectModal');
            }
        }

        async function disconnectRobot() {
            try {
                await fetch(`${API_URL}/disconnect`, { method: 'POST' });
                connectedRobot = null;
                updateConnectionUI(false);
                if (wsConnection) wsConnection.close();
            } catch (err) {
                console.error('Disconnect error:', err);
            }
        }

        function updateConnectionUI(connected) {
            const btn = document.getElementById('topConnectBtn');
            const statusDot = document.querySelector('.status-dot');
            const sidebarStatus = document.getElementById('sidebarStatus');

            if (connected) {
                btn.textContent = 'Disconnect';
                btn.classList.add('disconnect');
                statusDot.classList.add('online');
                sidebarStatus.textContent = 'Connected';
            } else {
                btn.textContent = 'Connect';
                btn.classList.remove('disconnect');
                statusDot.classList.remove('online');
                sidebarStatus.textContent = 'Disconnected';
            }
        }

        // ===== WEBSOCKET =====
        function connectWebSocket() {
            wsConnection = new WebSocket('ws://localhost:3000/ws');
            
            wsConnection.onmessage = (event) => {
                const data = JSON.parse(event.data);
                updateStatus(data);
            };

            wsConnection.onerror = (err) => {
                console.error('WebSocket error:', err);
            };
        }

        function updateStatus(data) {
            // Update top bar
            document.getElementById('topFsmState').textContent = data.fsm_state || '-';
            if (data.battery) {
                document.getElementById('topBatteryText').textContent = data.battery + '%';
                const fill = document.getElementById('topBatteryFill');
                fill.style.width = data.battery + '%';
                fill.classList.remove('critical', 'warning');
                if (data.battery < 20) fill.classList.add('critical');
                else if (data.battery < 50) fill.classList.add('warning');
            }
        }

        // ===== FSM STATES =====
        async function setFsmState(name, stateId) {
            if (!connectedRobot) return;
            try {
                await fetch(`${API_URL}/set_state?state_name=${name}`, { method: 'POST' });
            } catch (err) {
                console.error('FSM change error:', err);
            }
        }

        // ===== MOVEMENT CONTROLS =====
        function initKeyboardControls() {
            document.addEventListener('keydown', (e) => {
                if (!connectedRobot) return;
                const key = e.key.toLowerCase();
                if (['w', 'a', 's', 'd', 'q', 'e', ' '].includes(key)) {
                    e.preventDefault();
                    keysPressed[key] = true;
                    updateButtonState(key, true);
                    sendMovement();
                }
            });

            document.addEventListener('keyup', (e) => {
                const key = e.key.toLowerCase();
                if (['w', 'a', 's', 'd', 'q', 'e', ' '].includes(key)) {
                    e.preventDefault();
                    keysPressed[key] = false;
                    updateButtonState(key, false);
                    if (key === ' ') stopMovement();
                    else sendMovement();
                }
            });
        }

        function updateButtonState(key, pressed) {
            const keyMap = {
                'w': 'btn-w', 'a': 'btn-a', 's': 'btn-s', 'd': 'btn-d', 
                'q': 'btn-q', 'e': 'btn-e', ' ': 'btn-space'
            };
            const btn = document.getElementById(keyMap[key]);
            if (btn) {
                btn.classList.toggle('active', pressed);
            }
        }

        async function sendMovement() {
            if (!connectedRobot) return;
            
            let vx = 0, vy = 0, vyaw = 0;
            if (keysPressed['w']) vx += 0.5;
            if (keysPressed['s']) vx -= 0.5;
            if (keysPressed['a']) vy += 0.5;
            if (keysPressed['d']) vy -= 0.5;
            if (keysPressed['q']) vyaw += 0.5;
            if (keysPressed['e']) vyaw -= 0.5;

            try {
                await fetch(`${API_URL}/move?vx=${vx}&vy=${vy}&vyaw=${vyaw}`, { method: 'POST' });
            } catch (err) {
                console.error('Movement error:', err);
            }
        }

        async function stopMovement() {
            if (!connectedRobot) return;
            try {
                await fetch(`${API_URL}/stop`, { method: 'POST' });
                keysPressed = {};
                document.querySelectorAll('.control-btn').forEach(btn => btn.classList.remove('active'));
            } catch (err) {
                console.error('Stop error:', err);
            }
        }

        // ===== SLAM FUNCTIONS =====
        async function startMapping() {
            // Start 3D visualization - point cloud is ALWAYS publishing, no need to start SLAM
            pointCloud3DActive = true;
            document.getElementById('pointCloudCanvas').style.display = 'block';
            initThreeJS();
            update3DPointCloud();
            console.log('‚úÖ Point cloud visualization started (rt/unitree/slam_mapping/points is always streaming)');
        }

